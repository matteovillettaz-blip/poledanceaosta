---
import BaseLanding from '../layouts/BaseLanding.astro';
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
import CourseCard from '../components/shared/CourseCard.astro';
import GoogleMap from '../components/shared/GoogleMap.astro';
import InstagramFeed from '../components/shared/InstagramFeed.astro';
import content from '../data/content.json';
import '../styles/poc4.css';
---

<BaseLanding title="Pole Dance Aosta - Modern Warm" pocStyle="poc4">
  <Header variant="transparent" logoColor="#1A1A1A" />

  <main>
  <!-- Hero Section -->
  <section class="hero" id="home">
    <div class="hero__wrapper">
      <div class="hero__content">
        <span class="hero__tag">Pole Dance Aosta</span>
        <h1 class="hero__title">{content.hero.subtitle}</h1>
        <p class="hero__subtitle">{content.about.description}</p>
        <div class="hero__actions">
          <a href="#corsi" class="hero__cta">
            Scopri i corsi
          </a>
          <a href="#contatti" class="hero__cta hero__cta--secondary">
            Contattaci
          </a>
        </div>
      </div>
      <div class="hero__image">
        [Immagine Hero]
      </div>
    </div>
  </section>

  <!-- Chi Siamo Section -->
  <section class="section section--alt" id="chi-siamo">
    <div class="section__container">
      <div class="about__grid">
        <div>
          <header class="section__header">
            <span class="section__tag">Chi siamo</span>
            <h2 class="section__title">{content.about.title}</h2>
          </header>
          <p class="about__text">{content.about.description}</p>
        </div>
        <div class="about__values">
          {content.about.values.map((value: string, i: number) => (
            <div class="about__value">
              <div class="about__value-icon">{i + 1}</div>
              <span class="about__value-text">{value}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Corsi Section -->
  <section class="section" id="corsi">
    <div class="section__container">
      <header class="section__header section__header--center">
        <span class="section__tag">Percorsi</span>
        <h2 class="section__title">{content.courses.title}</h2>
        <p class="section__subtitle">{content.courses.subtitle}</p>
      </header>
      <div class="courses__grid">
        {content.courses.list.map((course: any) => (
          <CourseCard
            name={course.name}
            description={course.description}
            level={course.level}
            icon={course.icon}
            variant="default"
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Insegnanti Section -->
  <section class="section section--alt" id="insegnanti">
    <div class="section__container">
      <header class="section__header section__header--center">
        <span class="section__tag">Team</span>
        <h2 class="section__title">{content.instructors.title}</h2>
      </header>
      <div class="instructors__grid">
        {content.instructors.list.map((instructor: any) => (
          <article class="instructor-card">
            <div class="instructor-card__image">
              {instructor.name.charAt(0)}
            </div>
            <div class="instructor-card__content">
              <h3 class="instructor-card__name">{instructor.name}</h3>
              <p class="instructor-card__role">{instructor.role}</p>
              <p class="instructor-card__bio">{instructor.bio}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Orari Section -->
  <section class="section" id="orari">
    <div class="section__container">
      <header class="section__header section__header--center">
        <span class="section__tag">Orari</span>
        <h2 class="section__title">{content.schedule.title}</h2>
      </header>
      <div class="schedule__wrapper">
        <div class="schedule__list">
          {content.schedule.weekly.map((day: any) => (
            <div class="schedule__row">
              <div class="schedule__day">{day.day}</div>
              <div class="schedule__classes">
                {day.classes.map((cls: string) => (
                  <span class="schedule__class">{cls}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
        <p class="schedule__note">{content.schedule.note}</p>
      </div>
    </div>
  </section>

  <!-- Contatti Section -->
  <section class="section section--alt" id="contatti">
    <div class="section__container">
      <header class="section__header section__header--center">
        <span class="section__tag">Contatti</span>
        <h2 class="section__title">{content.contact.title}</h2>
      </header>
      <div class="contact__grid">
        <form class="contact__form" action="#" method="POST">
          <label for="contact-name-4" class="sr-only">{content.contact.formLabels.name}</label>
          <input
            type="text"
            id="contact-name-4"
            name="name"
            placeholder={content.contact.formLabels.name}
            class="contact__input"
            required
          />
          <label for="contact-email-4" class="sr-only">{content.contact.formLabels.email}</label>
          <input
            type="email"
            id="contact-email-4"
            name="email"
            placeholder={content.contact.formLabels.email}
            class="contact__input"
            required
          />
          <label for="contact-message-4" class="sr-only">{content.contact.formLabels.message}</label>
          <textarea
            id="contact-message-4"
            name="message"
            placeholder={content.contact.formLabels.message}
            class="contact__textarea"
            required
          ></textarea>
          <button type="submit" class="contact__submit">
            {content.contact.formLabels.submit}
          </button>
        </form>
        <div class="contact__info">
          <div class="contact__map">
            <GoogleMap height="250px" borderRadius="0" />
          </div>
          <div class="contact__social">
            <InstagramFeed variant="card" />
          </div>
        </div>
      </div>
    </div>
  </section>
  </main>

  <Footer variant="dark" />

  <!-- Back to Hub -->
  <a href="/" class="back-to-hub" aria-label="Torna all'hub POC">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="19" y1="12" x2="5" y2="12"></line>
      <polyline points="12 19 5 12 12 5"></polyline>
    </svg>
  </a>
</BaseLanding>

<style>
  .back-to-hub {
    position: fixed;
    bottom: 2rem;
    left: 2rem;
    width: 48px;
    height: 48px;
    background: #1A1A1A;
    color: white;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    z-index: 1000;
    transition: background 0.2s ease;
  }

  .back-to-hub:hover {
    background: #C17F59;
  }
</style>
