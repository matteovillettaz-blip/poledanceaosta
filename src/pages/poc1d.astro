---
import BaseLanding from '../layouts/BaseLanding.astro';
import Header from '../components/shared/Header.astro';
import content from '../data/content.json';
import '../styles/poc1.css';

// Single-action: Ultra minimal, one CTA
// Structure: Hero with CTA -> 3 Key Benefits -> Social Proof -> One Form
// Everything points to: "Prenota una prova gratuita"
---

<BaseLanding title="Pole Dance Aosta - Single-action" pocStyle="poc1">
  <Header variant="light" logoColor="#4A4A4A" />

  <main>
    <!-- Hero - Focused, Single CTA -->
    <section class="hero hero--full" id="home">
      <div class="hero__content">
        <h1 class="hero__title">Prova gratuita di Pole Dance</h1>
        <p class="hero__subtitle">Scopri se fa per te. Nessun impegno, nessuna esperienza richiesta.</p>
        <a href="#prenota" class="hero__cta hero__cta--primary">
          Prenota la tua prova gratuita
        </a>
        <p class="hero__note">La prossima lezione di prova: Lunedi ore 18:30</p>
      </div>
    </section>

    <!-- 3 Key Benefits Only -->
    <section class="section benefits-section" id="perche">
      <div class="section__container">
        <div class="benefits">
          <div class="benefit">
            <div class="benefit__icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
            </div>
            <h3 class="benefit__title">Nessuna esperienza</h3>
            <p class="benefit__text">Parti da zero. Ti guidiamo passo passo.</p>
          </div>
          <div class="benefit">
            <div class="benefit__icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
            <h3 class="benefit__title">Piccoli gruppi</h3>
            <p class="benefit__text">Max 8 persone. Attenzione personalizzata.</p>
          </div>
          <div class="benefit">
            <div class="benefit__icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
                <line x1="9" y1="9" x2="9.01" y2="9"></line>
                <line x1="15" y1="9" x2="15.01" y2="9"></line>
              </svg>
            </div>
            <h3 class="benefit__title">Zero giudizio</h3>
            <p class="benefit__text">Ambiente accogliente e supportivo.</p>
          </div>
        </div>
        <div class="benefits__cta">
          <a href="#prenota" class="cta-button">Prenota la tua prova gratuita</a>
        </div>
      </div>
    </section>

    <!-- Quick Social Proof -->
    <section class="section section--alt social-proof-section">
      <div class="section__container">
        <div class="social-proof">
          <div class="social-proof__avatars">
            <span>M</span><span>S</span><span>G</span><span>E</span><span>L</span>
          </div>
          <p class="social-proof__text">
            <strong>150+ donne</strong> hanno gia provato e continuano con noi
          </p>
          <div class="social-proof__quote">
            "La prova mi ha convinta subito. Ambiente fantastico."
            <cite>— Sara</cite>
          </div>
        </div>
      </div>
    </section>

    <!-- The Form - Single Focus -->
    <section class="section booking-section" id="prenota">
      <div class="section__container">
        <div class="booking-card">
          <div class="booking-card__header">
            <h2>Prenota la tua prova gratuita</h2>
            <p>Compila il form, ti ricontatteremo entro 24h</p>
          </div>

          <form class="booking-form" action="#" method="POST">
            <div class="booking-form__field">
              <label for="name-1d">Nome *</label>
              <input type="text" id="name-1d" name="name" required />
            </div>
            <div class="booking-form__field">
              <label for="email-1d">Email *</label>
              <input type="email" id="email-1d" name="email" required />
            </div>
            <div class="booking-form__field">
              <label for="phone-1d">Telefono</label>
              <input type="tel" id="phone-1d" name="phone" placeholder="Opzionale" />
            </div>
            <div class="booking-form__field">
              <label for="experience-1d">Hai gia fatto pole dance?</label>
              <select id="experience-1d" name="experience">
                <option value="no">No, sono principiante</option>
                <option value="poco">Si, qualche lezione</option>
                <option value="si">Si, ho esperienza</option>
              </select>
            </div>
            <button type="submit" class="booking-form__submit">
              Prenota ora - E' gratis
            </button>
            <p class="booking-form__note">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              Nessun impegno. Cancellazione gratuita.
            </p>
          </form>

          <div class="booking-card__info">
            <div class="booking-card__info-item">
              <strong>Dove</strong>
              <span>Aosta, Valle d'Aosta</span>
            </div>
            <div class="booking-card__info-item">
              <strong>Prossime date disponibili</strong>
              <span>Lun 18:30 · Mer 19:00 · Ven 18:00</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Minimal Footer -->
    <footer class="minimal-footer">
      <div class="minimal-footer__content">
        <p class="minimal-footer__brand">Pole Dance Aosta</p>
        <a href="https://www.instagram.com/poledanceaosta/" target="_blank" rel="noopener" class="minimal-footer__social">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
          @poledanceaosta
        </a>
      </div>
    </footer>
  </main>

  <a href="/" class="back-to-hub" aria-label="Torna all'hub POC">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
  </a>
</BaseLanding>

<style>
  .back-to-hub {
    position: fixed; bottom: 2rem; left: 2rem; width: 48px; height: 48px;
    background: rgba(0, 0, 0, 0.8); color: white; border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    text-decoration: none; z-index: 1000; transition: transform 0.2s ease;
  }
  .back-to-hub:hover { transform: scale(1.1); }

  /* Full Hero */
  .hero--full { min-height: 80vh; }
  .hero__cta--primary {
    padding: 1.25rem 2.5rem;
    font-size: 1.125rem;
    background: #4A4A4A;
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
  }
  .hero__note {
    margin-top: 1.5rem;
    font-size: 0.875rem;
    color: #888;
  }

  /* Benefits */
  .benefits-section { padding: 4rem 1.5rem; }
  .benefits {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto 3rem;
  }
  @media (max-width: 640px) {
    .benefits { grid-template-columns: 1fr; gap: 1.5rem; }
  }
  .benefit { text-align: center; }
  .benefit__icon {
    width: 64px; height: 64px;
    background: linear-gradient(135deg, #F8E8E8, #E8E0F0);
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    margin: 0 auto 1rem;
    color: #E8A0BF;
  }
  .benefit__title {
    font-size: 1.125rem; font-weight: 600; color: #4A4A4A; margin-bottom: 0.5rem;
  }
  .benefit__text { color: #666; font-size: 0.9375rem; }
  .benefits__cta { text-align: center; }
  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #E8A0BF, #D4A5C9);
    color: white;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(232,160,191,0.4);
  }

  /* Social Proof */
  .social-proof-section { padding: 3rem 1.5rem; }
  .social-proof { text-align: center; max-width: 500px; margin: 0 auto; }
  .social-proof__avatars {
    display: flex; justify-content: center; margin-bottom: 1rem;
  }
  .social-proof__avatars span {
    width: 40px; height: 40px;
    background: linear-gradient(135deg, #E8A0BF, #D4A5C9);
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    color: white; font-weight: 600; font-size: 0.875rem;
    margin: 0 -6px; border: 2px solid #F5F3F0;
  }
  .social-proof__text { color: #4A4A4A; margin-bottom: 1.5rem; }
  .social-proof__quote {
    font-style: italic; color: #666;
    padding: 1.5rem; background: white; border-radius: 16px;
  }
  .social-proof__quote cite {
    display: block; margin-top: 0.75rem;
    font-style: normal; font-weight: 600; color: #E8A0BF;
  }

  /* Booking Section */
  .booking-section { padding: 4rem 1.5rem; }
  .booking-card {
    max-width: 500px; margin: 0 auto;
    background: white; border-radius: 24px;
    box-shadow: 0 8px 40px rgba(0,0,0,0.1);
    overflow: hidden;
  }
  .booking-card__header {
    padding: 2rem; text-align: center;
    background: linear-gradient(135deg, #F8E8E8, #E8E0F0);
  }
  .booking-card__header h2 {
    font-size: 1.5rem; font-weight: 700; color: #4A4A4A; margin-bottom: 0.5rem;
  }
  .booking-card__header p { color: #666; }
  .booking-form { padding: 2rem; }
  .booking-form__field { margin-bottom: 1.25rem; }
  .booking-form__field label {
    display: block; font-size: 0.875rem; font-weight: 500;
    color: #4A4A4A; margin-bottom: 0.5rem;
  }
  .booking-form__field input,
  .booking-form__field select {
    width: 100%; padding: 0.875rem 1rem;
    border: 1px solid #E8E0F0; border-radius: 12px;
    font-size: 1rem; color: #4A4A4A;
    transition: border-color 0.2s ease;
  }
  .booking-form__field input:focus,
  .booking-form__field select:focus {
    outline: none; border-color: #E8A0BF;
  }
  .booking-form__submit {
    width: 100%; padding: 1rem;
    background: #4A4A4A; color: white;
    border: none; border-radius: 12px;
    font-size: 1rem; font-weight: 600;
    cursor: pointer; transition: background 0.2s ease;
  }
  .booking-form__submit:hover { background: #333; }
  .booking-form__note {
    display: flex; align-items: center; justify-content: center; gap: 0.5rem;
    margin-top: 1rem; font-size: 0.8125rem; color: #888;
  }
  .booking-form__note svg { color: #4CAF50; }
  .booking-card__info {
    padding: 1.5rem 2rem; background: #FAFAFA; border-top: 1px solid #F0F0F0;
  }
  .booking-card__info-item {
    display: flex; justify-content: space-between;
    padding: 0.5rem 0; font-size: 0.875rem;
  }
  .booking-card__info-item strong { color: #4A4A4A; }
  .booking-card__info-item span { color: #666; }

  /* Minimal Footer */
  .minimal-footer {
    padding: 3rem 1.5rem;
    background: #4A4A4A;
    color: white;
  }
  .minimal-footer__content {
    max-width: 500px; margin: 0 auto;
    display: flex; justify-content: space-between; align-items: center;
  }
  .minimal-footer__brand { font-weight: 600; }
  .minimal-footer__social {
    display: flex; align-items: center; gap: 0.5rem;
    color: white; text-decoration: none; opacity: 0.8;
    transition: opacity 0.2s ease;
  }
  .minimal-footer__social:hover { opacity: 1; }
</style>
