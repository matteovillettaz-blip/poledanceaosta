---
interface Props {
  height?: string;
  borderRadius?: string;
}

const { height = '300px', borderRadius = '16px' } = Astro.props;

// Placeholder embed - da sostituire con coordinate reali
const mapSrc = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22259.03826068!2d7.3019!3d45.7373!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478920ae44566b39%3A0x804fd3066e3e4e4e!2s11100%20Aosta%20AO!5e0!3m2!1sit!2sit!4v1234567890";
---

<div class="map-container" style={`--map-height: ${height}; --map-radius: ${borderRadius}`}>
  <iframe
    src={mapSrc}
    width="100%"
    height="100%"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title="Mappa Pole Dance Aosta"
  ></iframe>
</div>

<style>
  .map-container {
    width: 100%;
    height: var(--map-height, 300px);
    border-radius: var(--map-radius, 16px);
    overflow: hidden;
    background: #e5e5e5;
  }

  .map-container iframe {
    display: block;
    width: 100%;
    height: 100%;
  }
</style>
