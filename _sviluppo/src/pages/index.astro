<script>
  // Course card expand functionality
  document.querySelectorAll('.course-card__expand').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.course-card');
      const isExpanded = card?.classList.toggle('is-expanded');
      btn.setAttribute('aria-expanded', String(isExpanded));
      const textSpan = btn.querySelector('.expand-text');
      if (textSpan) {
        textSpan.textContent = isExpanded ? 'Chiudi' : 'Dettagli';
      }
    });
  });

  // Instructor bio expand functionality
  document.querySelectorAll('.instructor-card__read-more').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.instructor-card');
      const isExpanded = card?.classList.toggle('is-expanded');
      const textSpan = btn.querySelector('.read-more-text');
      if (textSpan) {
        textSpan.textContent = isExpanded ? 'Mostra meno' : 'Leggi di piu';
      }
    });
  });

  // Schedule view toggle
  const viewBtns = document.querySelectorAll('.schedule__view-btn');
  const scheduleViews = {
    cards: document.getElementById('schedule-cards'),
    grid: document.getElementById('schedule-grid'),
    icons: document.getElementById('schedule-icons'),
    list: document.getElementById('schedule-list'),
    single: document.getElementById('schedule-single')
  };

  viewBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const view = btn.getAttribute('data-view');

      // Update button states
      viewBtns.forEach(b => {
        b.classList.remove('schedule__view-btn--active');
        b.setAttribute('aria-pressed', 'false');
      });
      btn.classList.add('schedule__view-btn--active');
      btn.setAttribute('aria-pressed', 'true');

      // Hide all views, show selected
      Object.values(scheduleViews).forEach(v => v.style.display = 'none');
      if (scheduleViews[view]) {
        scheduleViews[view].style.display = 'block';
      }
    });
  });

  // Single card day selector
  const singleBtns = document.querySelectorAll('.schedule__single-btn');
  const singleContents = document.querySelectorAll('.schedule__single-content');

  singleBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const dayIndex = btn.getAttribute('data-day-index');

      // Update button states
      singleBtns.forEach(b => b.classList.remove('schedule__single-btn--active'));
      btn.classList.add('schedule__single-btn--active');

      // Show selected day content
      singleContents.forEach(content => {
        content.classList.remove('schedule__single-content--active');
        if (content.getAttribute('data-day-content') === dayIndex) {
          content.classList.add('schedule__single-content--active');
        }
      });
    });
  });

  // Highlight current day
  const today = new Date().getDay();
  // Convert: 0=Sun, 1=Mon... to our index: 0=Mon, 1=Tue...
  const dayIndex = today === 0 ? -1 : today - 1; // -1 for weekend (no highlight)

  if (dayIndex >= 0 && dayIndex <= 4) {
    // Highlight in cards view
    const dayCards = document.querySelectorAll('.schedule__day-card');
    dayCards[dayIndex]?.classList.add('schedule__day-card--today');

    // Highlight in grid view
    const gridHeaders = document.querySelectorAll('.schedule__grid-header[data-day-index]');
    gridHeaders[dayIndex]?.classList.add('schedule__grid-header--today');

    // Highlight grid column cells
    const gridRows = document.querySelectorAll('.schedule__grid-row');
    gridRows.forEach(row => {
      const cells = row.querySelectorAll('.schedule__grid-cell');
      cells[dayIndex]?.classList.add('schedule__grid-cell--today');
    });
  }

  </script>
