---
import BaseLanding from '../layouts/BaseLanding.astro';
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
import CourseCard from '../components/shared/CourseCard.astro';
import GoogleMap from '../components/shared/GoogleMap.astro';
import InstagramFeed from '../components/shared/InstagramFeed.astro';
import content from '../data/content.json';
import '../styles/poc1.css';
---

<BaseLanding title="Pole Dance Aosta" pocStyle="poc1">
  <Header variant="light" logoColor="#4A4A4A" />

  <main>
  <!-- Hero Section -->
  <section class="hero" id="home">
    <!-- VIDEO PLACEHOLDER: Sostituire con il video della palestra -->
    <div class="hero__video-wrapper">
      <video
        class="hero__video"
        autoplay
        muted
        loop
        playsinline
        poster="/images/hero-poster.jpg"
      >
        <!-- SOSTITUIRE QUESTO SRC CON IL VIDEO DELLA PALESTRA -->
        <source src="/videos/hero-placeholder.mp4" type="video/mp4" />
        Il tuo browser non supporta i video HTML5.
      </video>
      <div class="hero__video-overlay"></div>
    </div>
    <div class="hero__content">
      <h1 class="hero__title">{content.hero.title}</h1>
      <p class="hero__subtitle">{content.hero.subtitle}</p>
      <div class="hero__ctas">
        <a href="https://www.instagram.com/poledanceaosta/" target="_blank" rel="noopener noreferrer" class="hero__cta hero__cta--primary">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
          Scrivici su Instagram
        </a>
        <a href="#corsi" class="hero__cta hero__cta--secondary">
          Scopri i Corsi
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <polyline points="19 12 12 19 5 12"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Chi Siamo Section -->
  <section class="section section--alt" id="chi-siamo">
    <div class="section__container">
      <header class="section__header">
        <h2 class="section__title">{content.about.title}</h2>
      </header>
      <div class="about__content">
        <p class="about__text">{content.about.description}</p>
        <div class="about__values">
          {content.about.values.map((value: string) => (
            <span class="about__value">{value}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Corsi Section -->
  <section class="section" id="corsi">
    <div class="section__container">
      <header class="section__header">
        <h2 class="section__title">{content.courses.title}</h2>
        <p class="section__subtitle">{content.courses.subtitle}</p>
      </header>
      <div class="courses__grid">
        {content.courses.list.map((course: any) => (
          <article class={`course-card course-card--${course.level}`} data-course-id={course.id}>
            <div class="course-card__icon course-card__icon--animated">
              {course.icon === 'star' && (
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                </svg>
              )}
              {course.icon === 'zap' && (
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                </svg>
              )}
              {course.icon === 'heart' && (
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
              )}
              {course.icon === 'activity' && (
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                </svg>
              )}
              {course.icon === 'trophy' && (
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
                  <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
                  <path d="M4 22h16"></path>
                  <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
                  <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
                  <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
                </svg>
              )}
            </div>
            <div class="course-card__content">
              <span class={`course-card__level course-card__level--${course.level}`}>{course.levelLabel}</span>
              <h3 class="course-card__title">{course.name}</h3>
              <p class="course-card__description">{course.description}</p>
              <div class="course-card__meta">
                <span class="course-card__duration">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                  {course.duration}
                </span>
                <span class="course-card__group">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                  </svg>
                  {course.groupSize}
                </span>
              </div>
              <div class="course-card__details">
                <p>{course.details}</p>
              </div>
              <div class="course-card__actions">
                <button class="course-card__expand" aria-expanded="false">
                  <span class="expand-text">Dettagli</span>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6 9 12 15 18 9"></polyline>
                  </svg>
                </button>
                <a href="https://www.instagram.com/poledanceaosta/" target="_blank" rel="noopener noreferrer" class="course-card__cta">
                  Prenota prova
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Insegnanti Section -->
  <section class="section section--alt" id="insegnanti">
    <div class="section__container">
      <header class="section__header">
        <h2 class="section__title">{content.instructors.title}</h2>
        <p class="section__subtitle">{content.instructors.subtitle}</p>
      </header>
      <div class="instructors__grid">
        {content.instructors.list.map((instructor: any) => (
          <article class="instructor-card" data-instructor-id={instructor.id}>
            <div class="instructor-card__header">
              <img
                src={instructor.image}
                alt={instructor.name}
                class="instructor-card__photo"
                loading="lazy"
              />
              <a href={instructor.instagram} target="_blank" rel="noopener noreferrer" class="instructor-card__instagram" aria-label={`Instagram di ${instructor.name}`}>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </a>
            </div>
            <h3 class="instructor-card__name">{instructor.name}</h3>
            <p class="instructor-card__role">{instructor.role}</p>
            <div class="instructor-card__specializations">
              {instructor.specializations.map((spec: string) => (
                <span class="instructor-card__spec">{spec}</span>
              ))}
            </div>
            <div class="instructor-card__bio-wrapper">
              <p class="instructor-card__bio instructor-card__bio--short">{instructor.bioShort}</p>
              <p class="instructor-card__bio instructor-card__bio--full">{instructor.bioFull}</p>
              <button class="instructor-card__read-more">
                <span class="read-more-text">Leggi di piu</span>
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
              </button>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Prezzi Section -->
  <section class="section" id="prezzi">
    <div class="section__container">
      <header class="section__header">
        <h2 class="section__title">{content.pricing.title}</h2>
        <p class="section__subtitle">{content.pricing.subtitle}</p>
      </header>

      <div class="pricing__wrapper">
        <!-- Card Abbonamento Mono -->
        <div class="pricing__card pricing__card--limited">
          <div class="pricing__card-badge">1 disciplina</div>
          <h3 class="pricing__card-title">{content.pricing.monthlyLimited.title}</h3>
          <div class="pricing__card-price">
            <span class="pricing__price-currency">‚Ç¨</span>
            <span class="pricing__price-value">{content.pricing.monthlyLimited.price}</span>
            <span class="pricing__price-period">{content.pricing.monthlyLimited.period}</span>
          </div>
          <p class="pricing__card-description">{content.pricing.monthlyLimited.description}</p>
          <ul class="pricing__features">
            {content.pricing.monthlyLimited.features.map((feature: string) => (
              <li class="pricing__feature">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="https://www.instagram.com/poledanceaosta/" target="_blank" rel="noopener noreferrer" class="pricing__card-cta">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
            {content.pricing.monthlyLimited.cta}
          </a>
        </div>

        <!-- Card Abbonamento Open -->
        <div class="pricing__card pricing__card--open">
          <div class="pricing__card-badge">Consigliato</div>
          <h3 class="pricing__card-title">{content.pricing.monthlyOpen.title}</h3>
          <div class="pricing__card-price">
            <span class="pricing__price-currency">‚Ç¨</span>
            <span class="pricing__price-value">{content.pricing.monthlyOpen.price}</span>
            <span class="pricing__price-period">{content.pricing.monthlyOpen.period}</span>
          </div>
          <p class="pricing__card-description">{content.pricing.monthlyOpen.description}</p>
          <ul class="pricing__features">
            {content.pricing.monthlyOpen.features.map((feature: string) => (
              <li class="pricing__feature">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="https://www.instagram.com/poledanceaosta/" target="_blank" rel="noopener noreferrer" class="pricing__card-cta">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
            {content.pricing.monthlyOpen.cta}
          </a>
        </div>

        <!-- Card Lezione Privata -->
        <div class="pricing__card pricing__card--private">
          <div class="pricing__card-badge">1-to-1</div>
          <h3 class="pricing__card-title">{content.pricing.private.title}</h3>
          <div class="pricing__card-price">
            <span class="pricing__price-currency">‚Ç¨</span>
            <span class="pricing__price-value">{content.pricing.private.price}</span>
            <span class="pricing__price-period">{content.pricing.private.period}</span>
          </div>
          <p class="pricing__card-description">{content.pricing.private.description}</p>
          <ul class="pricing__features">
            {content.pricing.private.features.map((feature: string) => (
              <li class="pricing__feature">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="https://www.instagram.com/poledanceaosta/" target="_blank" rel="noopener noreferrer" class="pricing__card-cta">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
            {content.pricing.private.cta}
          </a>
        </div>
      </div>

      <!-- Banner Prova Gratuita -->
      <div class="pricing__free-trial-banner">
        <div class="pricing__free-trial-content">
          <div class="pricing__free-trial-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
            </svg>
          </div>
          <div class="pricing__free-trial-text">
            <h4 class="pricing__free-trial-title">{content.pricing.freeTrial.title}</h4>
            <p class="pricing__free-trial-description">{content.pricing.freeTrial.description}</p>
          </div>
          <a href="https://www.instagram.com/poledanceaosta/" target="_blank" rel="noopener noreferrer" class="pricing__free-trial-cta">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
            {content.pricing.freeTrial.cta}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Orari Section -->
  <section class="section section--alt" id="orari">
    <div class="section__container">
      <header class="section__header">
        <h2 class="section__title">{content.schedule.title}</h2>
        <p class="section__subtitle">{content.schedule.subtitle}</p>
      </header>

      <!-- Legenda colori -->
      <div class="schedule__legend">
        {content.schedule.courseTypes.map((type: any) => (
          <span class="schedule__legend-item" style={`--legend-color: ${type.color}`}>
            <span class="schedule__legend-dot"></span>
            {type.label}
          </span>
        ))}
      </div>

      <!-- Toggle visualizzazione - ALTERNATIVE DA VALUTARE -->
      <div class="schedule__alternatives-notice">
        <span class="schedule__alternatives-badge">‚ö†Ô∏è DEMO</span>
        <span class="schedule__alternatives-text">Queste sono 5 alternative di layout ‚Äî scegli quella che preferisci!</span>
      </div>
      <div class="schedule__view-toggle">
        <button class="schedule__view-btn schedule__view-btn--active" data-view="cards" aria-pressed="true">
          Giorni
        </button>
        <button class="schedule__view-btn" data-view="grid" aria-pressed="false">
          Griglia
        </button>
        <button class="schedule__view-btn" data-view="icons" aria-pressed="false">
          Icone
        </button>
        <button class="schedule__view-btn" data-view="list" aria-pressed="false">
          Lista
        </button>
        <button class="schedule__view-btn" data-view="single" aria-pressed="false">
          Selettore
        </button>
      </div>

      <!-- Vista Cards per giorno -->
      <div class="schedule__wrapper schedule__wrapper--cards" id="schedule-cards">
        <div class="schedule__cards-grid">
          {content.schedule.weekly.map((day: any, index: number) => (
            <div class="schedule__day-card" data-day-index={index}>
              <div class="schedule__day-card-header">
                <span class="schedule__day-card-name">{day.day}</span>
              </div>
              <div class="schedule__day-card-classes">
                {day.classes.map((cls: any) => (
                  <div class={`schedule__day-card-class schedule__day-card-class--${cls.type}`}>
                    <span class="schedule__day-card-time">{cls.time}</span>
                    <span class="schedule__day-card-course">{cls.name}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Vista Griglia Temporale -->
      <div class="schedule__wrapper schedule__wrapper--grid" id="schedule-grid" style="display: none;">
        <div class="schedule__time-grid">
          <table class="schedule__grid-table">
            <thead>
              <tr>
                <th class="schedule__grid-header schedule__grid-header--time">Orario</th>
                {content.schedule.weekly.map((day: any, index: number) => (
                  <th class="schedule__grid-header" data-day-index={index}>{day.dayShort}</th>
                ))}
              </tr>
            </thead>
            <tbody>
              <tr class="schedule__grid-row">
                <td class="schedule__grid-time">12:30</td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--beginner">Base</div></td>
                <td class="schedule__grid-cell schedule__grid-cell--empty">‚Äî</td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--beginner">Base</div></td>
                <td class="schedule__grid-cell schedule__grid-cell--empty">‚Äî</td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--advanced">Avanzato</div></td>
              </tr>
              <tr class="schedule__grid-row">
                <td class="schedule__grid-time">18:00</td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--intermediate">Intermedio</div></td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--flex">Flessibilit√†</div></td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--intermediate">Intermedio</div></td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--flex">Flessibilit√†</div></td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--intermediate">Intermedio</div></td>
              </tr>
              <tr class="schedule__grid-row">
                <td class="schedule__grid-time">19:30</td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--exotic">Exotic</div></td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--advanced">Avanzato</div></td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--exotic">Exotic</div></td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--advanced">Avanzato</div></td>
                <td class="schedule__grid-cell"><div class="schedule__grid-class schedule__grid-class--beginner">Base</div></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Vista Icone (Proposta 3) -->
      <div class="schedule__wrapper schedule__wrapper--icons" id="schedule-icons" style="display: none;">
        <div class="schedule__icons-grid">
          {content.schedule.weekly.map((day: any, index: number) => (
            <div class="schedule__icon-card" data-day-index={index}>
              <div class="schedule__icon-card-header">{day.day}</div>
              <div class="schedule__icon-card-body">
                {day.classes.map((cls: any) => (
                  <div class={`schedule__icon-row schedule__icon-row--${cls.type}`}>
                    <span class="schedule__icon-time">
                      {cls.time === "12:30" && "‚òÄÔ∏è"}
                      {cls.time === "18:00" && "üåÖ"}
                      {cls.time === "19:30" && "üåô"}
                    </span>
                    <span class="schedule__icon-course">{cls.name.replace("Pole Dance ", "").replace("Pole ", "")}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
        <div class="schedule__icons-legend">
          <span>‚òÄÔ∏è 12:30 (pranzo)</span>
          <span>üåÖ 18:00</span>
          <span>üåô 19:30</span>
        </div>
      </div>

      <!-- Vista Lista (Proposta 5) -->
      <div class="schedule__wrapper schedule__wrapper--list" id="schedule-list" style="display: none;">
        <div class="schedule__minimal-list">
          {content.schedule.weekly.map((day: any, index: number) => (
            <div class="schedule__minimal-day" data-day-index={index}>
              <span class="schedule__minimal-day-name">{day.day}</span>
              <span class="schedule__minimal-classes">
                {day.classes.map((cls: any, i: number) => (
                  <span class={`schedule__minimal-class schedule__minimal-class--${cls.type}`}>
                    {cls.time} {cls.name.replace("Pole Dance ", "").replace("Pole ", "")}{i < day.classes.length - 1 ? " ¬∑ " : ""}
                  </span>
                ))}
              </span>
            </div>
          ))}
          <div class="schedule__minimal-weekend">Sabato e Domenica chiuso</div>
        </div>
      </div>

      <!-- Vista Selettore (Card Singola) -->
      <div class="schedule__wrapper schedule__wrapper--single" id="schedule-single" style="display: none;">
        <div class="schedule__single-selector">
          {content.schedule.weekly.map((day: any, index: number) => (
            <button
              class={`schedule__single-btn ${index === 0 ? 'schedule__single-btn--active' : ''}`}
              data-day-index={index}
            >
              {day.dayShort}
            </button>
          ))}
        </div>
        <div class="schedule__single-card">
          {content.schedule.weekly.map((day: any, index: number) => (
            <div
              class={`schedule__single-content ${index === 0 ? 'schedule__single-content--active' : ''}`}
              data-day-content={index}
            >
