---
// Hero section with video background
---

<section class="hero" id="home">
  <!-- Video Background -->
  <div class="hero__media">
    <video
      class="hero__video"
      autoplay
      muted
      loop
      playsinline
      poster="/images/hero-poster.jpg"
    >
      <source src="/videos/hero-placeholder.mp4" type="video/mp4">
    </video>
    <div class="hero__overlay"></div>
  </div>

  <!-- Content -->
  <div class="hero__content container">
    <div class="hero__text">
      <span class="hero__badge">Dal 2019 in Valle d'Aosta</span>
      <h1 class="hero__title">
        <span class="hero__title-line">Scopri la</span>
        <span class="hero__title-accent">Pole Dance</span>
      </h1>
      <p class="hero__subtitle">
        Il primo studio di pole dance in Valle d'Aosta. Forza, eleganza e liberta di espressione in un ambiente accogliente e professionale.
      </p>
      <div class="hero__ctas">
        <a href="#contatti" class="btn btn--accent btn--lg hero__cta-primary">
          Prenota Prova Gratuita
        </a>
        <a href="#corsi" class="btn btn--outline-white btn--lg hero__cta-secondary">
          Scopri i Corsi
        </a>
      </div>
    </div>

    <!-- Stats -->
    <div class="hero__stats">
      <div class="hero__stat">
        <span class="hero__stat-number">6</span>
        <span class="hero__stat-label">Pali Professionali</span>
      </div>
      <div class="hero__stat">
        <span class="hero__stat-number">3</span>
        <span class="hero__stat-label">Insegnanti Certificate</span>
      </div>
      <div class="hero__stat">
        <span class="hero__stat-number">5+</span>
        <span class="hero__stat-label">Anni di Esperienza</span>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="hero__scroll">
    <span class="hero__scroll-text">Scopri di piu</span>
    <div class="hero__scroll-icon">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  /* Video Background */
  .hero__media {
    position: absolute;
    inset: 0;
    z-index: var(--z-below);
  }

  .hero__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(26, 26, 26, 0.7) 0%,
      rgba(26, 26, 26, 0.5) 50%,
      rgba(26, 26, 26, 0.8) 100%
    );
  }

  /* Content */
  .hero__content {
    position: relative;
    z-index: var(--z-base);
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
    padding-top: 100px;
    padding-bottom: var(--space-20);
  }

  .hero__text {
    max-width: 700px;
  }

  .hero__badge {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    background-color: rgba(212, 165, 165, 0.2);
    border: 1px solid var(--color-accent);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-accent);
    margin-bottom: var(--space-6);
    animation: fadeInDown var(--transition-slow) ease;
  }

  .hero__title {
    font-family: var(--font-display);
    font-size: var(--text-5xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--text-light);
    margin-bottom: var(--space-6);
  }

  .hero__title-line {
    display: block;
    animation: fadeInUp var(--transition-slow) ease;
    animation-delay: 0.1s;
    animation-fill-mode: both;
  }

  .hero__title-accent {
    display: block;
    color: var(--color-accent);
    animation: fadeInUp var(--transition-slow) ease;
    animation-delay: 0.2s;
    animation-fill-mode: both;
  }

  .hero__subtitle {
    font-size: var(--text-lg);
    font-weight: var(--font-light);
    line-height: var(--leading-relaxed);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-10);
    max-width: 550px;
    animation: fadeInUp var(--transition-slow) ease;
    animation-delay: 0.3s;
    animation-fill-mode: both;
  }

  .hero__ctas {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    animation: fadeInUp var(--transition-slow) ease;
    animation-delay: 0.4s;
    animation-fill-mode: both;
  }

  /* Stats */
  .hero__stats {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-8);
    margin-top: var(--space-16);
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    animation: fadeInUp var(--transition-slow) ease;
    animation-delay: 0.5s;
    animation-fill-mode: both;
  }

  .hero__stat {
    display: flex;
    flex-direction: column;
  }

  .hero__stat-number {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-accent);
  }

  .hero__stat-label {
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: rgba(255, 255, 255, 0.6);
  }

  /* Scroll Indicator */
  .hero__scroll {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    color: rgba(255, 255, 255, 0.6);
    animation: fadeIn 1s ease;
    animation-delay: 1s;
    animation-fill-mode: both;
  }

  .hero__scroll-text {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
  }

  .hero__scroll-icon {
    animation: float 2s ease-in-out infinite;
  }

  /* Mobile Adjustments */
  @media (max-width: 768px) {
    .hero__content {
      padding-top: 120px;
    }

    .hero__stats {
      gap: var(--space-6);
    }

    .hero__stat-number {
      font-size: var(--text-2xl);
    }

    .hero__ctas {
      flex-direction: column;
    }

    .hero__cta-primary,
    .hero__cta-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>
