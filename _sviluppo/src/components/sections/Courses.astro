---
const courses = [
  {
    id: 'base',
    level: 'Base',
    levelColor: '#64B48C',
    title: 'Pole Dance Base',
    description: 'Impara le basi: spin, climb, sit e i primi tricks. Non serve esperienza, solo voglia di mettersi in gioco!',
    details: 'Perfetto per chi non ha mai provato. Lavoreremo sulla presa, la forza di base e i primi movimenti al palo. Ogni lezione include riscaldamento, tecnica e defaticamento.',
    duration: '90 min',
    maxParticipants: 6,
    icon: 'sparkles'
  },
  {
    id: 'intermedio',
    level: 'Intermedio',
    levelColor: '#A082BE',
    title: 'Pole Dance Intermedio',
    description: 'Inversioni, tricks aerei e combo piu lunghe. Per chi ha gia le basi solide e vuole progredire.',
    details: 'Requisito: saper fare climb e sit in sicurezza. Lavoreremo su inversioni, tricks aerei e combo piu complesse.',
    duration: '90 min',
    maxParticipants: 6,
    icon: 'zap'
  },
  {
    id: 'avanzato',
    level: 'Avanzato',
    levelColor: '#8264AA',
    title: 'Pole Dance Avanzato',
    description: 'Figure aeree avanzate, combo complesse e preparazione a gare. Il massimo livello tecnico.',
    details: 'Requisito: inversioni sicure e buona resistenza. Preparazione a gare e perfezionamento tecnico.',
    duration: '90 min',
    maxParticipants: 6,
    icon: 'trophy'
  },
  {
    id: 'exotic',
    level: 'Tutti i Livelli',
    levelColor: '#C896C8',
    title: 'Pole Exotic',
    description: 'Floorwork, wave e coreografie sensuali. Libera il tuo lato artistico ed espressivo.',
    details: 'Heels obbligatori. Focus su floorwork, wave, movimenti sensuali e coreografie. Libera la tua femminilita!',
    duration: '90 min',
    maxParticipants: 6,
    icon: 'heart'
  },
  {
    id: 'flex',
    level: 'Tutti i Livelli',
    levelColor: '#64B48C',
    title: 'Flessibilita',
    description: 'Stretching attivo e passivo per spaccate, ponte e mobilita generale.',
    details: 'Perfetto come complemento alla pole o come corso singolo. Migliora spaccate, ponte e flessibilita generale.',
    duration: '90 min',
    maxParticipants: 6,
    icon: 'activity'
  }
];
---

<section class="courses section section--alt" id="corsi">
  <div class="container">
    <!-- Header -->
    <div class="section__header" data-animate="fade-up">
      <span class="section__subtitle">I Nostri Corsi</span>
      <h2 class="section__title">Trova il Percorso<br/>Perfetto per Te</h2>
      <p class="section__description">
        Pole dance, exotic e flessibilita. Dai primi passi al livello avanzato, con lezioni da max 6 persone per un'attenzione personalizzata.
      </p>
    </div>

    <!-- Courses Grid -->
    <div class="courses__grid">
      {courses.map((course, index) => (
        <article
          class="course-card"
          data-course={course.id}
          data-animate="fade-up"
          style={`--delay: ${index * 0.1}s`}
        >
          <div class="course-card__header">
            <span class="course-card__level" style={`--level-color: ${course.levelColor}`}>
              {course.level}
            </span>
            <div class="course-card__icon">
              {course.icon === 'sparkles' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                </svg>
              )}
              {course.icon === 'zap' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                </svg>
              )}
              {course.icon === 'trophy' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
                  <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
                  <path d="M4 22h16"></path>
                  <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
                  <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
                  <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
                </svg>
              )}
              {course.icon === 'heart' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
              )}
              {course.icon === 'activity' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                </svg>
              )}
            </div>
          </div>

          <div class="course-card__body">
            <h3 class="course-card__title">{course.title}</h3>
            <p class="course-card__description">{course.description}</p>

            <div class="course-card__meta">
              <div class="course-card__meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <span>{course.duration}</span>
              </div>
              <div class="course-card__meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                </svg>
                <span>Max {course.maxParticipants}</span>
              </div>
            </div>

            <div class="course-card__details">
              <p>{course.details}</p>
            </div>
          </div>

          <div class="course-card__footer">
            <button class="course-card__toggle" aria-expanded="false">
              <span class="toggle-text">Scopri di piu</span>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>
          </div>
        </article>
      ))}
    </div>

    <!-- CTA Banner -->
    <div class="courses__cta" data-animate="fade-up">
      <div class="courses__cta-content">
        <div class="courses__cta-badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
        </div>
        <div class="courses__cta-text">
          <h3>Prima Lezione Gratuita</h3>
          <p>Vieni a provare senza impegno. Scopri se la pole dance fa per te!</p>
        </div>
        <a href="#contatti" class="btn btn--gold btn--lg">
          Prenota Ora
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .courses {
    background-color: var(--bg-secondary);
  }

  /* Courses Grid */
  .courses__grid {
    display: grid;
    gap: var(--space-6);
    margin-bottom: var(--space-16);
  }

  @media (min-width: 768px) {
    .courses__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1200px) {
    .courses__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Course Card */
  .course-card {
    background-color: var(--bg-primary);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
    animation-delay: var(--delay, 0s);
  }

  .course-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .course-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-5) var(--space-6);
    border-bottom: 1px solid var(--bg-tertiary);
  }

  .course-card__level {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--level-color);
    background-color: color-mix(in srgb, var(--level-color) 15%, transparent);
    border-radius: var(--radius-full);
  }

  .course-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: var(--bg-secondary);
    border-radius: var(--radius-full);
    color: var(--text-secondary);
  }

  .course-card__body {
    padding: var(--space-6);
  }

  .course-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .course-card__description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }

  .course-card__meta {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .course-card__meta-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--text-muted);
  }

  .course-card__meta-item svg {
    color: var(--color-accent);
  }

  .course-card__details {
    max-height: 0;
    overflow: hidden;
    transition: max-height var(--transition-base);
  }

  .course-card.is-expanded .course-card__details {
    max-height: 200px;
  }

  .course-card__details p {
    padding-top: var(--space-4);
    border-top: 1px solid var(--bg-tertiary);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    margin-bottom: 0;
  }

  .course-card__footer {
    padding: var(--space-4) var(--space-6);
    border-top: 1px solid var(--bg-tertiary);
  }

  .course-card__toggle {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-accent-dark);
    background: none;
    border: none;
    cursor: pointer;
    transition: color var(--transition-fast);
  }

  .course-card__toggle:hover {
    color: var(--color-primary);
  }

  .course-card__toggle svg {
    transition: transform var(--transition-base);
  }

  .course-card.is-expanded .course-card__toggle svg {
    transform: rotate(180deg);
  }

  .course-card.is-expanded .course-card__toggle .toggle-text::before {
    content: 'Nascondi';
  }

  .course-card.is-expanded .course-card__toggle .toggle-text {
    font-size: 0;
  }

  .course-card.is-expanded .course-card__toggle .toggle-text::before {
    font-size: var(--text-sm);
  }

  /* CTA Banner */
  .courses__cta {
    background: var(--gradient-hero);
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    overflow: hidden;
  }

  .courses__cta-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
    text-align: center;
  }

  @media (min-width: 768px) {
    .courses__cta-content {
      flex-direction: row;
      text-align: left;
    }
  }

  .courses__cta-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: var(--gradient-gold);
    border-radius: var(--radius-full);
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .courses__cta-text {
    flex: 1;
  }

  .courses__cta-text h3 {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--text-light);
    margin-bottom: var(--space-2);
  }

  .courses__cta-text p {
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0;
  }
</style>

<script>
  document.querySelectorAll('.course-card__toggle').forEach(toggle => {
    toggle.addEventListener('click', () => {
      const card = toggle.closest('.course-card');
      const isExpanded = card?.classList.toggle('is-expanded');
      toggle.setAttribute('aria-expanded', String(isExpanded));
    });
  });
</script>
