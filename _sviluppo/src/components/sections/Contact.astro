---
const contactInfo = {
  address: {
    street: 'Localita La Maladiere, 19',
    city: '11020 Saint-Christophe (AO)',
    mapsUrl: 'https://www.google.com/maps/dir/?api=1&destination=Località+La+Maladière+19,+11020+Saint-Christophe+AO'
  },
  phone: '+39 XXX XXX XXXX',
  instagram: {
    handle: '@poledanceaosta',
    url: 'https://www.instagram.com/poledanceaosta/'
  },
  whatsapp: 'https://wa.me/39XXXXXXXXXX'
};

const faqs = [
  {
    question: 'Cosa devo portare alla prima lezione?',
    answer: 'Porta abbigliamento comodo (shorts e canotta), asciugamano e acqua. Evita creme e oli sulla pelle prima della lezione per una migliore presa sul palo.'
  },
  {
    question: 'Serve esperienza pregressa?',
    answer: 'No! Il corso Base e pensato proprio per chi non ha mai provato. Ti guideremo passo dopo passo dalle basi.'
  },
  {
    question: 'La prima lezione e davvero gratuita?',
    answer: 'Si! La prima lezione di prova e completamente gratuita e senza impegno. Scrivici su Instagram per prenotare.'
  },
  {
    question: 'Posso recuperare una lezione persa?',
    answer: 'Si, offriamo la possibilita di recuperare le lezioni perse. Contattaci per maggiori dettagli sulla policy di recupero.'
  }
];
---

<section class="contact section" id="contatti">
  <div class="container">
    <!-- Header -->
    <div class="section__header" data-animate="fade-up">
      <span class="section__subtitle">Contattaci</span>
      <h2 class="section__title">Inizia il Tuo<br/>Percorso Oggi</h2>
      <p class="section__description">
        Hai domande? Vuoi prenotare la tua prova gratuita? Scrivici, ti rispondiamo in giornata!
      </p>
    </div>

    <div class="contact__grid">
      <!-- Contact Card -->
      <div class="contact__card" data-animate="fade-up">
        <div class="contact__card-header">
          <h3 class="contact__card-title">Come Raggiungerci</h3>
        </div>

        <!-- Instagram CTA -->
        <a
          href={contactInfo.instagram.url}
          target="_blank"
          rel="noopener noreferrer"
          class="contact__instagram"
        >
          <div class="contact__instagram-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </div>
          <div class="contact__instagram-text">
            <span class="contact__instagram-label">Scrivici su Instagram</span>
            <span class="contact__instagram-handle">{contactInfo.instagram.handle}</span>
          </div>
          <svg class="contact__instagram-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>

        <!-- Contact Details -->
        <div class="contact__details">
          <!-- Address -->
          <a
            href={contactInfo.address.mapsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="contact__detail"
          >
            <div class="contact__detail-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div class="contact__detail-text">
              <span class="contact__detail-label">Indirizzo</span>
              <span class="contact__detail-value">{contactInfo.address.street}</span>
              <span class="contact__detail-value">{contactInfo.address.city}</span>
            </div>
          </a>

          <!-- Phone -->
          <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="contact__detail">
            <div class="contact__detail-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <div class="contact__detail-text">
              <span class="contact__detail-label">Telefono</span>
              <span class="contact__detail-value">{contactInfo.phone}</span>
            </div>
          </a>

          <!-- Parking -->
          <div class="contact__detail contact__detail--info">
            <div class="contact__detail-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M9 17V7h4a3 3 0 0 1 0 6H9"></path>
              </svg>
            </div>
            <div class="contact__detail-text">
              <span class="contact__detail-label">Parcheggio</span>
              <span class="contact__detail-value">Parcheggio gratuito sotto la palestra</span>
            </div>
          </div>
        </div>

        <!-- Map -->
        <div class="contact__map">
          <iframe
            src="https://www.google.com/maps?q=Località+La+Maladière+19,+11020+Saint-Christophe+AO,+Italy&output=embed"
            width="100%"
            height="250"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Mappa Pole Dance Aosta"
          ></iframe>
        </div>

        <a
          href={contactInfo.address.mapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn--secondary contact__directions"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="3 11 22 2 13 21 11 13 3 11"></polygon>
          </svg>
          Indicazioni Stradali
        </a>
      </div>

      <!-- FAQ Card -->
      <div class="contact__faq" data-animate="fade-up" style="--delay: 0.15s">
        <h3 class="contact__faq-title">Domande Frequenti</h3>

        <div class="contact__faq-list">
          {faqs.map((faq, index) => (
            <div class="contact__faq-item" data-faq={index}>
              <button class="contact__faq-question" aria-expanded="false">
                <span>{faq.question}</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="12" y1="5" x2="12" y2="19"></line>
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
              </button>
              <div class="contact__faq-answer">
                <p>{faq.answer}</p>
              </div>
            </div>
          ))}
        </div>

        <!-- Additional CTA -->
        <div class="contact__faq-cta">
          <p>Hai altre domande?</p>
          <a
            href={contactInfo.instagram.url}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn--accent"
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
            Scrivici su Instagram
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background-color: var(--bg-primary);
  }

  /* Grid */
  .contact__grid {
    display: grid;
    gap: var(--space-8);
  }

  @media (min-width: 1024px) {
    .contact__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-12);
    }
  }

  /* Contact Card */
  .contact__card {
    background-color: var(--bg-secondary);
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
  }

  .contact__card-header {
    margin-bottom: var(--space-6);
  }

  .contact__card-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
  }

  /* Instagram CTA */
  .contact__instagram {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5);
    background: linear-gradient(135deg, #833AB4 0%, #FD1D1D 50%, #F77737 100%);
    border-radius: var(--radius-xl);
    margin-bottom: var(--space-6);
    transition: all var(--transition-base);
  }

  .contact__instagram:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }

  .contact__instagram-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-full);
    color: white;
  }

  .contact__instagram-text {
    flex: 1;
  }

  .contact__instagram-label {
    display: block;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: rgba(255, 255, 255, 0.8);
  }

  .contact__instagram-handle {
    display: block;
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: white;
  }

  .contact__instagram-arrow {
    color: white;
    transition: transform var(--transition-fast);
  }

  .contact__instagram:hover .contact__instagram-arrow {
    transform: translateX(5px);
  }

  /* Contact Details */
  .contact__details {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .contact__detail {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-4);
    background-color: var(--bg-primary);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
  }

  .contact__detail:not(.contact__detail--info):hover {
    background-color: var(--color-accent-light);
  }

  .contact__detail-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: var(--color-accent-light);
    border-radius: var(--radius-full);
    color: var(--color-accent-dark);
    flex-shrink: 0;
  }

  .contact__detail-text {
    display: flex;
    flex-direction: column;
  }

  .contact__detail-label {
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--text-muted);
    margin-bottom: var(--space-1);
  }

  .contact__detail-value {
    font-size: var(--text-sm);
    color: var(--text-primary);
  }

  /* Map */
  .contact__map {
    border-radius: var(--radius-xl);
    overflow: hidden;
    margin-bottom: var(--space-4);
  }

  .contact__map iframe {
    display: block;
  }

  .contact__directions {
    width: 100%;
    justify-content: center;
  }

  /* FAQ */
  .contact__faq {
    animation-delay: var(--delay, 0s);
  }

  .contact__faq-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-6);
  }

  .contact__faq-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-8);
  }

  .contact__faq-item {
    background-color: var(--bg-secondary);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .contact__faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: var(--space-5);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    color: var(--text-primary);
    text-align: left;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .contact__faq-question:hover {
    background-color: var(--bg-tertiary);
  }

  .contact__faq-question svg {
    flex-shrink: 0;
    color: var(--color-accent);
    transition: transform var(--transition-base);
  }

  .contact__faq-item.is-open .contact__faq-question svg {
    transform: rotate(45deg);
  }

  .contact__faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height var(--transition-base);
  }

  .contact__faq-item.is-open .contact__faq-answer {
    max-height: 300px;
  }

  .contact__faq-answer p {
    padding: 0 var(--space-5) var(--space-5);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: 0;
  }

  /* FAQ CTA */
  .contact__faq-cta {
    text-align: center;
    padding: var(--space-6);
    background-color: var(--bg-secondary);
    border-radius: var(--radius-xl);
  }

  .contact__faq-cta p {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
  }
</style>

<script>
  document.querySelectorAll('.contact__faq-question').forEach(question => {
    question.addEventListener('click', () => {
      const item = question.closest('.contact__faq-item');
      const isOpen = item?.classList.toggle('is-open');
      question.setAttribute('aria-expanded', String(isOpen));
    });
  });
</script>
