---
interface Props {
  height?: string;
  borderRadius?: string;
}

const { height = '300px', borderRadius = '16px' } = Astro.props;

// Mappa centrata su Località La Maladière 19, Saint-Christophe AO
// Coordinate: 45.7452, 7.3550 (Saint-Christophe, Valle d'Aosta)
const mapSrc = "https://www.google.com/maps?q=Località+La+Maladière+19,+11020+Saint-Christophe+AO,+Italy&output=embed";
---

<div class="map-container" style={`--map-height: ${height}; --map-radius: ${borderRadius}`}>
  <iframe
    src={mapSrc}
    width="100%"
    height="100%"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title="Mappa Pole Dance Aosta"
  ></iframe>
</div>

<style>
  .map-container {
    width: 100%;
    height: var(--map-height, 300px);
    border-radius: var(--map-radius, 16px);
    overflow: hidden;
    background: #e5e5e5;
  }

  .map-container iframe {
    display: block;
    width: 100%;
    height: 100%;
  }
</style>
