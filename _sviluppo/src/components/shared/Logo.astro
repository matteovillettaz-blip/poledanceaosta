---
interface Props {
  size?: 'small' | 'medium' | 'large';
  color?: string;
}

const { size = 'medium', color = 'currentColor' } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';

const sizes = {
  small: 40,
  medium: 48,
  large: 60
};

const dimension = sizes[size];
---

<div class="logo">
  <a href={base} aria-label="Pole Dance Aosta - Home">
    <img
      src={`${base}logo.png`}
      alt="Pole Dance Aosta"
      width={dimension}
      height={dimension}
      loading="eager"
    />
  </a>
</div>

<style>
  .logo {
    display: inline-flex;
    align-items: center;
  }

  .logo a {
    display: block;
    line-height: 0;
  }

  .logo img {
    display: block;
    object-fit: contain;
  }
</style>
