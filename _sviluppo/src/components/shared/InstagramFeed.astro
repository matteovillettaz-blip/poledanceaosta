---
import content from '../../data/content.json';

interface Props {
  variant?: 'button' | 'card';
}

const { variant = 'button' } = Astro.props;
---

{variant === 'button' ? (
  <a
    href={content.instagram}
    target="_blank"
    rel="noopener noreferrer"
    class="instagram-button"
    aria-label="Seguici su Instagram"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
    </svg>
    <span>Seguici su Instagram</span>
  </a>
) : (
  <a
    href={content.instagram}
    target="_blank"
    rel="noopener noreferrer"
    class="instagram-card"
    aria-label="Seguici su Instagram"
  >
    <div class="instagram-card__icon">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
      </svg>
    </div>
    <div class="instagram-card__content">
      <span class="instagram-card__handle">@poledanceaosta</span>
      <span class="instagram-card__cta">Seguici per novit√† e contenuti esclusivi</span>
    </div>
    <svg class="instagram-card__arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="5" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>
  </a>
)}

<style>
  .instagram-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: white;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 50px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .instagram-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(225, 48, 108, 0.4);
  }

  .instagram-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: var(--instagram-card-bg, #fafafa);
    border: 1px solid var(--instagram-card-border, #e5e5e5);
    border-radius: 16px;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .instagram-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .instagram-card__icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    color: white;
    flex-shrink: 0;
  }

  .instagram-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .instagram-card__handle {
    font-weight: 600;
    font-size: 1rem;
  }

  .instagram-card__cta {
    font-size: 0.875rem;
    opacity: 0.7;
  }

  .instagram-card__arrow {
    opacity: 0.5;
    flex-shrink: 0;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .instagram-card:hover .instagram-card__arrow {
    transform: translateX(4px);
    opacity: 1;
  }

  @media (max-width: 480px) {
    .instagram-card__cta {
      display: none;
    }
  }
</style>
