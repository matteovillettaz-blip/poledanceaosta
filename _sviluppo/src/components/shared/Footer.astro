---
import content from '../../data/content.json';

interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'dark' } = Astro.props;
---

<footer class={`footer footer--${variant}`}>
  <div class="footer__container">
    <div class="footer__main">
      <div class="footer__brand">
        <h3 class="footer__title">{content.siteName}</h3>
        <p class="footer__tagline">{content.tagline}</p>
      </div>

      <div class="footer__nav">
        <h4>Link Rapidi</h4>
        <ul class="footer__nav-list">
          <li><a href="#chi-siamo">Chi Siamo</a></li>
          <li><a href="#corsi">Corsi</a></li>
          <li><a href="#insegnanti">Insegnanti</a></li>
          <li><a href="#prezzi">Prezzi</a></li>
          <li><a href="#orari">Orari</a></li>
          <li><a href="#contatti">Contatti</a></li>
        </ul>
      </div>

      <div class="footer__contact">
        <h4>Dove Siamo</h4>
        <p>Località La Maladière, 19</p>
        <p>11020 Saint-Christophe (AO)</p>
      </div>

      <div class="footer__social">
        <h4>Seguici</h4>
        <a
          href={content.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="footer__social-link"
          aria-label="Seguici su Instagram"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
          <span>@poledanceaosta</span>
        </a>
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">{content.footer.copyright}</p>
      <p class="footer__piva">P.IVA: XXXXXXXXXXX</p>
      <p class="footer__made">{content.footer.madeWith}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 3rem 0 1.5rem;
  }

  .footer--dark {
    background: #1a1a1a;
    color: #ffffff;
  }

  .footer--light {
    background: #f5f5f5;
    color: #1a1a1a;
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer__main {
    display: grid;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer__title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .footer__tagline {
    font-size: 0.875rem;
    opacity: 0.8;
    line-height: 1.5;
  }

  .footer__nav h4,
  .footer__contact h4,
  .footer__social h4 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
    opacity: 0.6;
  }

  .footer__nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__nav-list li {
    margin-bottom: 0.5rem;
  }

  .footer__nav-list a {
    color: inherit;
    text-decoration: none;
    font-size: 0.875rem;
    opacity: 0.9;
    transition: opacity 0.2s ease;
  }

  .footer__nav-list a:hover {
    opacity: 0.7;
  }

  .footer__contact p {
    font-size: 0.875rem;
    line-height: 1.8;
    opacity: 0.9;
  }

  .footer__social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: inherit;
    text-decoration: none;
    font-size: 0.875rem;
    transition: opacity 0.2s ease;
  }

  .footer__social-link:hover {
    opacity: 0.7;
  }

  .footer__bottom {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(128, 128, 128, 0.2);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-align: center;
  }

  .footer__copyright,
  .footer__piva,
  .footer__made {
    font-size: 0.75rem;
    opacity: 0.6;
  }

  @media (min-width: 768px) {
    .footer {
      padding: 4rem 0 2rem;
    }

    .footer__container {
      padding: 0 2rem;
    }

    .footer__main {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 2rem;
    }

    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
