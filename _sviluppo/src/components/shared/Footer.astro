---
import content from '../../data/content.json';

interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'dark' } = Astro.props;
---

<footer class={`footer footer--${variant}`}>
  <div class="footer__container">
    <div class="footer__main">
      <div class="footer__brand">
        <h3 class="footer__title">{content.siteName}</h3>
        <p class="footer__tagline">{content.tagline}</p>
      </div>

      <div class="footer__contact">
        <h4>Contatti</h4>
        <a href="tel:+39XXXXXXXXXX" class="footer__contact-link">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          <span>+39 XXX XXX XXXX</span>
        </a>
        <a href="https://wa.me/39XXXXXXXXXX" target="_blank" rel="noopener noreferrer" class="footer__contact-link">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>WhatsApp</span>
        </a>
      </div>

      <div class="footer__address">
        <h4>Dove Siamo</h4>
        <a href="https://www.google.com/maps/dir/?api=1&destination=Località+La+Maladière+19,+11020+Saint-Christophe+AO" target="_blank" rel="noopener noreferrer" class="footer__address-link">
          <p>Località La Maladière, 19</p>
          <p>11020 Saint-Christophe (AO)</p>
        </a>
      </div>

      <div class="footer__social">
        <h4>Seguici</h4>
        <a
          href={content.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="footer__social-link"
          aria-label="Seguici su Instagram"
        >
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
          <span>@poledanceaosta</span>
        </a>
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">{content.footer.copyright}</p>
      <p class="footer__piva">P.IVA: XXXXXXXXXXX</p>
      <p class="footer__made">{content.footer.madeWith}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 3rem 0 1.5rem;
  }

  .footer--dark {
    background: #1a1a1a;
    color: #ffffff;
  }

  .footer--light {
    background: #f5f5f5;
    color: #1a1a1a;
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer__main {
    display: grid;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer__title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .footer__tagline {
    font-size: 0.875rem;
    opacity: 0.8;
    line-height: 1.5;
  }

  .footer__contact h4,
  .footer__address h4,
  .footer__social h4 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
    opacity: 0.6;
  }

  .footer__contact-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: inherit;
    text-decoration: none;
    font-size: 0.875rem;
    opacity: 0.9;
    transition: opacity 0.2s ease;
    margin-bottom: 0.5rem;
  }

  .footer__contact-link:hover {
    opacity: 0.7;
  }

  .footer__address-link {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s ease;
    display: block;
  }

  .footer__address-link:hover {
    opacity: 0.7;
  }

  .footer__address p {
    font-size: 0.875rem;
    line-height: 1.8;
    opacity: 0.9;
  }

  .footer__social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: inherit;
    text-decoration: none;
    font-size: 0.875rem;
    transition: opacity 0.2s ease;
  }

  .footer__social-link:hover {
    opacity: 0.7;
  }

  .footer__bottom {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(128, 128, 128, 0.2);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-align: center;
  }

  .footer__copyright,
  .footer__piva,
  .footer__made {
    font-size: 0.75rem;
    opacity: 0.6;
  }

  @media (min-width: 768px) {
    .footer {
      padding: 4rem 0 2rem;
    }

    .footer__container {
      padding: 0 2rem;
    }

    .footer__main {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 2rem;
    }

    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
