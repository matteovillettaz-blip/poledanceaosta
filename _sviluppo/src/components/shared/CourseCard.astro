---
interface Props {
  name: string;
  description: string;
  level: string;
  icon?: string;
  variant?: 'default' | 'outlined' | 'filled';
}

const { name, description, level, icon = 'star', variant = 'default' } = Astro.props;

const icons: Record<string, string> = {
  star: 'M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z',
  'trending-up': 'M23 6l-9.5 9.5-5-5L1 18 M17 6h6v6',
  heart: 'M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z',
  activity: 'M22 12h-4l-3 9L9 3l-3 9H2'
};
---

<article class={`course-card course-card--${variant}`}>
  <div class="course-card__icon">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d={icons[icon] || icons.star} />
    </svg>
  </div>

  <div class="course-card__content">
    <span class="course-card__level">{level}</span>
    <h3 class="course-card__title">{name}</h3>
    <p class="course-card__description">{description}</p>
  </div>
</article>

<style>
  .course-card {
    padding: 1.5rem;
    border-radius: 16px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .course-card:hover {
    transform: translateY(-4px);
  }

  .course-card--default {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .course-card--default:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .course-card--outlined {
    background: transparent;
    border: 2px solid currentColor;
  }

  .course-card--filled {
    background: var(--card-bg, #f5f5f5);
    border: none;
  }

  .course-card__icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    background: var(--icon-bg, rgba(0, 0, 0, 0.05));
    color: var(--icon-color, currentColor);
  }

  .course-card__level {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.6;
    margin-bottom: 0.5rem;
  }

  .course-card__title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .course-card__description {
    font-size: 0.875rem;
    line-height: 1.6;
    opacity: 0.8;
  }

  @media (min-width: 768px) {
    .course-card {
      padding: 2rem;
    }

    .course-card__title {
      font-size: 1.25rem;
    }
  }
</style>
