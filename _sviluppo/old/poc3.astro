---
import BaseLanding from '../layouts/BaseLanding.astro';
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
import CourseCard from '../components/shared/CourseCard.astro';
import GoogleMap from '../components/shared/GoogleMap.astro';
import InstagramFeed from '../components/shared/InstagramFeed.astro';
import content from '../data/content.json';
import '../styles/poc3.css';
---

<BaseLanding title="Pole Dance Aosta - Sportivo Friendly" pocStyle="poc3">
  <Header variant="light" logoColor="#1A1A2E" />

  <main>
  <!-- Hero Section -->
  <section class="hero" id="home">
    <div class="hero__content">
      <span class="hero__badge">Benvenuta in famiglia</span>
      <h1 class="hero__title">
        Scopri la tua <span>forza</span>
      </h1>
      <p class="hero__subtitle">{content.hero.subtitle}</p>
      <a href="#corsi" class="hero__cta">
        Inizia ora
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </section>

  <!-- Chi Siamo Section -->
  <section class="section section--alt" id="chi-siamo">
    <div class="section__container">
      <header class="section__header">
        <span class="section__badge">Chi siamo</span>
        <h2 class="section__title">{content.about.title}</h2>
      </header>
      <div class="about__content">
        <p class="about__text">{content.about.description}</p>
        <div class="about__values">
          {content.about.values.map((value: string) => (
            <span class="about__value">{value}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Corsi Section -->
  <section class="section" id="corsi">
    <div class="section__container">
      <header class="section__header">
        <span class="section__badge">I corsi</span>
        <h2 class="section__title">{content.courses.title}</h2>
        <p class="section__subtitle">{content.courses.subtitle}</p>
      </header>
      <div class="courses__grid">
        {content.courses.list.map((course: any) => (
          <CourseCard
            name={course.name}
            description={course.description}
            level={course.level}
            icon={course.icon}
            variant="default"
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Insegnanti Section -->
  <section class="section section--dark" id="insegnanti">
    <div class="section__container">
      <header class="section__header">
        <span class="section__badge">Il team</span>
        <h2 class="section__title">{content.instructors.title}</h2>
        <p class="section__subtitle">{content.instructors.subtitle}</p>
      </header>
      <div class="instructors__grid">
        {content.instructors.list.map((instructor: any) => (
          <article class="instructor-card">
            <div class="instructor-card__image">
              {instructor.name.charAt(0)}
            </div>
            <h3 class="instructor-card__name">{instructor.name}</h3>
            <p class="instructor-card__role">{instructor.role}</p>
            <p class="instructor-card__bio">{instructor.bio}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Orari Section -->
  <section class="section" id="orari">
    <div class="section__container">
      <header class="section__header">
        <span class="section__badge">Orari</span>
        <h2 class="section__title">{content.schedule.title}</h2>
        <p class="section__subtitle">{content.schedule.subtitle}</p>
      </header>
      <div class="schedule__wrapper">
        <div class="schedule__grid">
          {content.schedule.weekly.map((day: any) => (
            <div class="schedule__day-card">
              <div class="schedule__day-name">{day.day}</div>
              <div class="schedule__day-classes">
                {day.classes.map((cls: string) => (
                  <span class="schedule__class">{cls}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
        <p class="schedule__note">{content.schedule.note}</p>
      </div>
    </div>
  </section>

  <!-- Contatti Section -->
  <section class="section section--alt" id="contatti">
    <div class="section__container">
      <header class="section__header">
        <span class="section__badge">Contatti</span>
        <h2 class="section__title">{content.contact.title}</h2>
        <p class="section__subtitle">{content.contact.subtitle}</p>
      </header>
      <div class="contact__grid">
        <div class="contact__form-wrapper">
          <form class="contact__form" action="#" method="POST">
            <label for="contact-name-3" class="sr-only">{content.contact.formLabels.name}</label>
            <input
              type="text"
              id="contact-name-3"
              name="name"
              placeholder={content.contact.formLabels.name}
              class="contact__input"
              required
            />
            <label for="contact-email-3" class="sr-only">{content.contact.formLabels.email}</label>
            <input
              type="email"
              id="contact-email-3"
              name="email"
              placeholder={content.contact.formLabels.email}
              class="contact__input"
              required
            />
            <label for="contact-message-3" class="sr-only">{content.contact.formLabels.message}</label>
            <textarea
              id="contact-message-3"
              name="message"
              placeholder={content.contact.formLabels.message}
              class="contact__textarea"
              required
            ></textarea>
            <button type="submit" class="contact__submit">
              {content.contact.formLabels.submit}
            </button>
          </form>
        </div>
        <div class="contact__info">
          <div class="contact__map">
            <GoogleMap height="280px" borderRadius="0" />
          </div>
          <div class="contact__social">
            <InstagramFeed variant="button" />
          </div>
        </div>
      </div>
    </div>
  </section>
  </main>

  <Footer variant="dark" />

  <!-- Back to Hub -->
  <a href={import.meta.env.BASE_URL} class="back-to-hub" aria-label="Torna all'hub POC">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="19" y1="12" x2="5" y2="12"></line>
      <polyline points="12 19 5 12 12 5"></polyline>
    </svg>
  </a>
</BaseLanding>

<style>
  .back-to-hub {
    position: fixed;
    bottom: 2rem;
    left: 2rem;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #E91E8C, #7B2D8E);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    z-index: 1000;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .back-to-hub:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 30px rgba(233, 30, 140, 0.3);
  }
</style>
